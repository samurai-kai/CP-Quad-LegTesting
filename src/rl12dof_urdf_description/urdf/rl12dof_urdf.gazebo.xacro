<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="rl12dof_gazebo" params="">

    <!-- Existing Gazebo plugin block -->
    <gazebo>
      <plugin
        name="gz_ros2_control::GazeboSimROS2ControlPlugin"
        filename="libgz_ros2_control-system.so">

        <!-- Controller config -->
        <parameters>$(find rl12dof_urdf_description)/config/controllers.yaml</parameters>

        <!-- Required for ros2_control -->
        <robot_param>robot_description</robot_param>
        <robot_param_node>robot_state_publisher</robot_param_node>
      </plugin>

      <!-- pose publisher -->
      <plugin
        filename="gz-sim-pose-publisher-system"
        name="gz::sim::systems::PosePublisher">
        <publish_link_pose>true</publish_link_pose>
      </plugin>
    </gazebo>

    <gazebo>
      <joint name="stand_to_world" type="prismatic">
        <parent>world</parent>
        <child>test_stand</child>
        <axis>
          <xyz>0 0 1</xyz>  <!-- allow motion in Z -->
          <limit>
            <lower>-0.05</lower>
            <upper>0.05</upper>
            <effort>2000</effort>
            <velocity>1.0</velocity>
          </limit>
        </axis>
      </joint>
    </gazebo>

    <gazebo reference="link1_to_base">
      <joint>
        <type>revolute</type>
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
      </joint>
    </gazebo>

    <gazebo reference="link2_to_link1">
      <joint>
        <type>revolute</type>
        <axis>
          <xyz>0 -1 0</xyz>
        </axis>
      </joint>
    </gazebo>

    <gazebo reference="link3_to_link2">
      <joint>
        <type>revolute</type>
        <axis>
          <xyz>0 -1 0</xyz>
        </axis>
      </joint>
    </gazebo>

  </xacro:macro>

</robot>
